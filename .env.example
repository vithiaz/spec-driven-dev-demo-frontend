# Environment Variables Template
# Copy this file to .env.local and fill in the values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (public, safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application URL (used for internal API calls)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# OPTIONAL: COOKIE CONFIGURATION
# ===========================================

# Cookie domain for cross-subdomain auth (optional)
# COOKIE_DOMAIN=.yourdomain.com

# ===========================================
# OPTIONAL: RAIDEN BACKEND (if using)
# ===========================================

# Raiden Base URL per environment
# RAIDEN_BASE_URL=https://api.yourbackend.com
